# Telegram Bot Configuration
BOT_TOKEN=YOUR_BOT_TOKEN

# Database Configuration
# IMPORTANT: Choose based on docker-compose.yml network mode
# For network_mode: host - use localhost with external port
DATABASE_URL="postgresql://postgres:sheralibot@localhost:5435/sherali_datadb"
# For bridge mode (default) - use service name
# DATABASE_URL="postgresql://postgres:sheralibot@db:5432/sherali_datadb"

# Server Configuration
PORT=3000
NODE_ENV=production

# Chromium Configuration (for Alpine Linux in Docker)
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
CHROME_BIN=/usr/bin/chromium

# Screenshot Configuration (8 hours = 28800000ms)
SCREENSHOT_CACHE_DURATION=28800000
SCREENSHOT_QUALITY=95
PUPPETEER_CONCURRENCY=3

# Logging Configuration
LOG_LEVEL=log
